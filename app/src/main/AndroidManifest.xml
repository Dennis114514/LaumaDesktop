<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 存储权限 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" /> <!-- 应用列表权限 -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" /> <!-- 电话权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" /> <!-- 悬浮窗权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.LaumaDesktop">
        <activity
            android:name=".Settings.ContractSettings"
            android:exported="false"
            android:label="@string/title_activity_contract_settings"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".Settings.QuickStartSet"
            android:exported="false"
            android:label="@string/title_activity_quick_start_set"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".Settings.ListAppsSet"
            android:exported="false"
            android:label="@string/title_activity_list_apps_set"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".Settings.SetLauncher"
            android:exported="false"
            android:label="@string/title_activity_set_launcher"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".Settings.AllAppsActivity"
            android:exported="false"
            android:label="@string/title_activity_all_apps"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".Settings.AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".Settings.SettingsMain"
            android:exported="false"
            android:label="@string/title_activity_settings_main"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.AccessibilityManagerGuide"
            android:exported="false"
            android:label="@string/title_activity_accessibility_manager_guide"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.InitializeProvider"
            android:exported="false"
            android:label="@string/title_activity_initialize_provider"
            android:theme="@style/Theme.LaumaDesktop" /> <!-- 无障碍服务声明 -->
        <service
            android:name="com.dennis114514.VideoCallProvider.BaseAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity
            android:name=".FirstUseGuide.AppDownload"
            android:exported="false"
            android:label="@string/title_activity_app_download"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name="com.dennis114514.VideoCallProvider.AccessibilityOpenQQ"
            android:exported="false"
            android:label="@string/title_activity_accessibility_open_qq"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.EndGuide"
            android:exported="true"
            android:label="@string/title_activity_end_guide"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.AppChoise"
            android:exported="false"
            android:label="@string/title_activity_app_choise"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.ContactSettingsGuide"
            android:exported="false"
            android:label="@string/title_activity_contact_settings_guide"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.PermissionApplication"
            android:exported="false"
            android:label="@string/title_activity_permission_application"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".FirstUseGuide.Welcome"
            android:exported="true"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.LaumaDesktop" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LaumaDesktop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 启动器intent filter - 允许设置为默认桌面 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- FileProvider 配置 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>